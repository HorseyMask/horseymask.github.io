		<Card>
			<div class="header-container">
				<Icon type='lucide' name="microscope" width={24} height={24} class='glow-icon' />
				<h2>Research Interests</h2>
			</div>
			<div class="research-interests-container">
				{interests.map((entry) => (
					<div class="work-experience-entry">
						<h3 class="research-interests-title">{entry.data.title}</h3>
						<p class="work-experience-desc">{entry.data.description}</p>
					</div>
				))}
			</div>
		</Card>
		<Card>
			<div class="header-container">
				<Icon type='lucide' name="briefcase-business" width={24} height={24} class='glow-icon' />
				<h2>Education & Work Experience</h2>
			</div>
			<div class="work-experience-container">
				{workExperience.map((entry) => (
					<div class="work-experience-entry">
						<span class="work-experience-duration">{entry.data.duration}</span>
						<h3 class="work-experience-company">{entry.data.company}</h3>
						<span class="work-experience-role">{entry.data.title}</span>
						<p class="work-experience-desc">{entry.data.description}</p>
					</div>
				))}
			</div>
		</Card>
		<Card>
			<div class="header-container">
				<Icon type='lucide' name="book-check" width={24} height={24} class='glow-icon' />
				<h2>Publications</h2>
			</div>
			<div class="work-experience-container">
				{publications.map((entry) => (
					<div class="work-experience-entry">
						<h3 class="work-experience-company">{entry.data.title}</h3>
						<h5 class="work-experience-duration">{entry.data.venue}</h5>
						<h4 class="work-experience-role">{entry.data.authors}</h4>
						<a href={entry.data.links} class="work-experience-desc">{entry.data.links}</a>
					</div>
				))}
			</div>
		</Card>
		<Card>
			<div class="header-container">
				<Icon type='lucide' name="award" width={24} height={24} class='glow-icon' />
				<h2>Honor & Awards</h2>
			</div>
			<div class="work-experience-container">
				{awards.map((award) => (
					<div class="work-experience-entry">
						<span class="work-experience-duration">{award.data.duration}</span>
						<h3 class="work-experience-company">{award.data.company}</h3>
						<p class="work-experience-desc">{award.data.description}</p>
					</div>
				))}
			</div>
		</Card>
		<Card>
			<div class="header-container">
				<Icon type='lucide' name="languages" width={24} height={24} class='glow-icon' />
				<h2>Languages</h2>
			</div>
			<div class="work-experience-container">
				{languages.map((entry) => (
					<div class="work-experience-entry">
						<h3 class="work-name">{entry.data.language}</h3>
						<span class="work-experience-role">{entry.data.level}</span>
					</div>
				))}
			</div>
		</Card>
	</div>
</Layout>
